<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineAmbientShadowColor="#9C2C2C"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/producerBrandItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Producer brand"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/producerCountryItem"
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:divider="#FF9900"
        android:dividerHeight="2px"
        android:paddingBottom="20dp"
        android:text="Producer county"
        android:textColor="@color/black"
        android:textSize="16sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/producerBrandItem"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C3C3C3"
        app:layout_constraintTop_toBottomOf="@+id/producerBrandItem"
        />


</androidx.constraintlayout.widget.ConstraintLayout>